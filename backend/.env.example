# Environment
DEBUG=true
ENV=development

# MongoDB
MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/
MONGODB_DB_NAME=healthbridge

# ChromaDB Configuration
CHROMA_MODE=persistent                    # "persistent" (dev) or "http" (prod)
# Persistent mode path (used only when CHROMA_MODE=persistent)
CHROMA_PERSIST_DIR=./data/chroma          # Shared by RAG retriever + semantic memory
# HTTP mode settings (used only when CHROMA_MODE=http)
CHROMA_HOST=localhost                     # ChromaDB server hostname
CHROMA_PORT=8000                          # ChromaDB server port
CHROMA_AUTH_TOKEN=                        # REQUIRED for production! Generate with: openssl rand -hex 32

# LLM Provider (github, gemini, openai, azure)
LLM_PROVIDER=github
LLM_MODEL=openai/gpt-4o-mini
LLM_TEMPERATURE=0.2    # Keep low for health data consistency (0.2-0.3 recommended)

# GitHub Models (default provider)
GITHUB_TOKEN=your_github_token_here
GITHUB_BASE_URL=https://models.github.ai/inference

# Google / Gemini
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_key_here

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
